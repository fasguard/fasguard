import python ;

if ! [ python.configured ]
{
    ECHO "notice: no Python configured in user-config.jam" ;
    ECHO "notice: will use default configuration" ;
    using python ;
}

lib
  fasguardfilter
  boost_log
  boost_python
  boost_regex
  crypto++
  ;

python-extension asg_engine_ext
  : # sources
    AbstractTrieNode.cpp
    AsgEngine.cpp
    Dendrogram.cpp
    LocalAlignment.cpp
    RegexExtractorLCSS.cpp
    SmlLrgSigExtrct.cpp
    SuricataRuleMaker.cpp
    Trie.cpp
    ../DetectorReports/DetectorReport.cpp
  : # requirements
    <library>boost_python
    <toolset>gcc:<cxxflags>-std=gnu++0x
    <toolset>clang:<cxxflags>-std=c++11
    <define>BOOST_LOG_DYN_LINK
    <define>BOOST_REGEX_DYN_LINK
    <library>boost_log
    <library>boost_regex
    <library>crypto++
    <library>fasguardfilter
  ;

# Put the extension and Boost.Python DLL in the current directory, so
# that running script by hand works.
install convenient_copy
  : asg_engine_ext
  : # requirements
    <install-dependencies>on
    <install-type>SHARED_LIB
    <install-type>PYTHON_EXTENSION
    <location>.
  ;
